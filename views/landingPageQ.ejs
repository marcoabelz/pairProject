<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Xiaopee</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.0.0/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
    <div class="container">
        <img src="" alt="">
        <a class="navbar-brand" href="/">Xiaopee</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <form class="d-flex ms-auto search-bar">
                <input style="width: 700px;" class="form-control w-80" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-warning ms-2" type="submit">Cari</button>
            </form>
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a href="/login">
                      <button class="btn btn-outline-warning ms-3" type="submit">Log In</button>
                    </a>
                </li>
              
                <li class="nav-item">
                    <a href="">
                      <button class="btn btn-outline-warning ms-3" type="submit">Sign In</button>
                  </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="bi bi-cart"></i></a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Carousel -->
<div class="container mt-4">
  <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img style="height: 430px;" src="https://fiverr-res.cloudinary.com/images/t_main1,q_auto,f_auto,q_auto,f_auto/gigs/258417769/original/92f82ed031171c1a0322acd3a37772bc37c735be/amazing-banner-design-for-ads.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img style="height: 430px;" src="https://fiverr-res.cloudinary.com/images/t_main1,q_auto,f_auto,q_auto,f_auto/gigs/192251734/original/c67186f34d3b703817d034f8aaabd75bda132c55/make-3-web-banner-design-for-you.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img style="height: 430px;" src="https://fiverr-res.cloudinary.com/images/t_main1,q_auto,f_auto,q_auto,f_auto/gigs/190902133/original/ccd0cbc4035b4cc0758482bee4a4fd8efe4a2863/design-professional-web-banner-design.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
</div>

    <section class="categories py-5">
      <div class="container">
          <h2 class="mb-4">Kategori Produk</h2>
          <div class="row">

              <% datas.forEach(category => { %>
                <div class="col-6 col-md-2 mb-4">
                    <div class="card category-card text-center">
                        <div class="card-body">
                            <img style="height: 150px;" src="https://via.placeholder.com/100x100.png" class="card-img-top mx-auto d-block" alt="Kategori 1">
                            <h6 style="height: 50px; margin: auto;" class="card-title mt-4"><%= category.name %></h6>
                        </div>
                    </div>
                </div>
              <% }) %>
          </div>
      </div>
  </section>


    <section class="featured-products py-5 bg-light">
        <div class="container">
            <div class="row ">

              <% datas1.forEach(product => { %>
                <div class="col-md-3 mb-3">
                    <div class="card product-card">
                        <img style="height: 300px;" src="https://via.placeholder.com/200x200.png" class="card-img-top" alt="Produk 1">
                        <div class="card-body">
                            <h5 style="height: 50px;" class="card-title"> <%= product.name  %></h5>
                            <div class="d-flex">
                              <p class="card-text"><%= format_currency(product.price)  %></p>
                              <a st href="#" class="btn btn-outline-primary btn-sm text-center">Buy Now!</a>
                            </div>
                        </div>
                    </div>
                </div>
              <% }) %>
            </div>
        </div>
    </section>

    <footer class="bg-dark text-white text-center py-3">
        <div class="container">
            <p class="mb-0">&copy; 2024 Xiaopee. All Rights Reserved.</p>
        </div>
    </footer>

    <%- include('_script') %>
</body>
</html>
